{
    "name": "bmn/platform",
    "description": "Shared foundation services for the BMN Boston WordPress platform.",
    "type": "wordpress-muplugin",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "BMN\\Platform\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BMN\\Platform\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
